# MeatLizard AI Platform Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Settings
APP_NAME="MeatLizard AI Platform"
VERSION="1.0.0"
DEBUG=false
SECRET_KEY="your-secret-key-change-in-production"
JWT_SECRET_KEY="your-jwt-secret-key-change-in-production"
DOMAIN="your-domain.com"

# Database Configuration
DATABASE_URL="postgresql+asyncpg://username:password@localhost:5432/meatlizard"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Discord Bot Configuration
DISCORD_BOT_TOKEN="your-server-bot-token"
DISCORD_CLIENT_BOT_TOKEN="your-client-bot-token"
DISCORD_GUILD_ID="your-discord-guild-id"
DISCORD_CLIENT_BOT_ID="your-client-bot-application-id"
DISCORD_SERVER_BOT_ID="your-server-bot-application-id"
DISCORD_ADMIN_ROLES="role-id-1,role-id-2"

# Encryption Configuration
PAYLOAD_ENCRYPTION_KEY="base64-encoded-32-byte-key"

# Email Configuration
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
FROM_EMAIL="noreply@your-domain.com"
ADMIN_EMAIL="admin@your-domain.com"

# S3 Storage Configuration
S3_BUCKET_NAME="meatlizard-storage"
S3_ACCESS_KEY_ID="your-s3-access-key"
S3_SECRET_ACCESS_KEY="your-s3-secret-key"
S3_REGION="us-east-1"
S3_ENDPOINT_URL=""  # For S3-compatible services like DigitalOcean Spaces

# File Upload Limits
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_VIDEO_SIZE=10737418240  # 10GB in bytes
MAX_VIDEO_DURATION=14400  # 4 hours in seconds
CHUNK_SIZE=5242880  # 5MB in bytes

# AI/LLM Configuration
LLAMA_CPP_PATH="/usr/local/bin/llama-cpp"
DEFAULT_MODEL_PATH="/path/to/your/model.gguf"
MAX_CONTEXT_LENGTH=4096
DEFAULT_TEMPERATURE=0.7

# Transcoding Configuration
TRANSCODING_TEMP_DIR="/tmp/transcoding"
FFMPEG_PATH="ffmpeg"
FFPROBE_PATH="ffprobe"

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# URL Shortener Configuration
SHORT_URL_LENGTH=6
CUSTOM_DOMAIN=""  # Optional custom domain for short URLs

# Pastebin Configuration
PASTE_ID_LENGTH=8
MAX_PASTE_SIZE=1048576  # 1MB in bytes
DEFAULT_PASTE_EXPIRY_DAYS=30

# Analytics Configuration
ANALYTICS_RETENTION_DAYS=365
ENABLE_ANALYTICS=true

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT_HOURS=24
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Content Moderation
ENABLE_CONTENT_MODERATION=true
AUTO_MODERATE_THRESHOLD=0.8

# Background Tasks (Celery)
CELERY_BROKER_URL="redis://localhost:6379/0"
CELERY_RESULT_BACKEND="redis://localhost:6379/0"

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# Media Import Configuration
YTDLP_PATH="yt-dlp"
MAX_IMPORT_SIZE=5368709120  # 5GB in bytes
IMPORT_TEMP_DIR="/tmp/imports"

# Development Settings (only for development)
ALLOWED_HOSTS="localhost,127.0.0.1"
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"